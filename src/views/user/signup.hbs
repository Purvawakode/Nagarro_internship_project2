{{>header}}
<div class="jumbotron">
    <h1 class="display-4" style="text-align:center">Welcome to The Essentials!</h1>
</div>

<div class="container">
    <h1>Sign Up</h1>
    {{# if hasErrors}}
    <div class="alert alert-danger">
        {{# each messages }}
        <p>{{this}}</p>
        {{/each}}
    </div>
    {{/if}}
    <form action="/user/signup" method="POST">
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="name" name="email" class="form-control" placeholder="Enter your email" id="email"
                aria-describedby="emailHelp"><small id="email_message"></small>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                else.</small>
        </div>
        <div class="form-group">
            <label for="password">Password</label>&nbsp&nbsp<small id="password_message">(Password must be more than 8 character and must include atleast 1 of each Special Char, Uppercase, Lowercase , Number)</small>
            <input type="password" name="password" placeholder="Enter your Password" class="form-control" id="password">
        </div>
        <div class="form-group">
            <label for="password-confirm">Confirm Password</label>&nbsp&nbsp<small id="password_message_confirm">(Password must match your previously typed password)</small>
            <input type="password" name="password-confirm" placeholder="Re-enter your Password" class="form-control" id="password-confirm">
        </div>
        <div class="form-group form-check">
            <input type="checkbox" name="isadmin" class="form-check-input" id="isadmin">
            <label class="form-check-label" for="exampleCheck1">Please check if you are an admin user</label>
        </div>
        <button type="submit" class="btn btn-primary" id="user-signup-btn" disabled='disabled'>Sign Up</button><br>
        <a type="button" style="margin-top: 10px;" class="btn btn-info mt-2" href="/user/signin">Already Existing User</a>
    </form>
    </br>
    <a href="/" class="btn btn-warning" role="button">Home</a>
</div>
</br>
<div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)" "padding: 20%"  >
        <a class="text-dark">&copy; Copyright {{currentYear}}, The Essentials</a>
</div>


</body>

</html>